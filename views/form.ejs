<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Document</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Golos+Text:wght@400;500;600;700;800;900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Wix+Madefor+Text:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="/stylesheets/style.css"
    />
  </head>
  <body>
    <div class="formCont">
      <div class="title">
        <h1 class="topic">Send Message Form</h1>
      </div>
      <div class="formDiv">
        <form
          method="POST"
          action="/new"
          class="form"
        >
          <input
            class="textInput"
            type="text"
            name="author"
            placeholder="Author Name"
          />
          <input
            class="textInput"
            type="text"
            name="textMessage"
            placeholder="Type in your message"
          />
          <div class="actionButtonsDiv">
            <a href="/">
              <input
                class="back"
                type="button"
                value="Go Back"
              />
            </a>
            <input
              class="submit"
              type="submit"
              value="Send Message"
            />
          </div>
          <div>
            <% if(typeof errorMsg != 'undefined') { %> <%= errorMsg %> <% } %>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
